<div class="container">
  <div class="row homepage-main">
    {{#each thoughts as |thoughts|}}
      <div class="row mb-4 project card text-dark shadow">
        <div class="card-header">
          <h3>
            <a href="/blogPost/{{blogPost.id}}">{{thoughts.title}}</a>
          </h3>
          <p>Created by
            {{thoughts.user.name}}
            on
            {{format_date thoughts.date_created}}</p>
        </div>
        <div class="card-body">
          <p>{{thoughts.description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>